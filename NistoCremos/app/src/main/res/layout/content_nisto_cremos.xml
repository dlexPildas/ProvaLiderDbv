<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="usuario.app.nistocremos.NistoCremosActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp"
    tools:showIn="@layout/activity_nisto_cremos">


    <LinearLayout
        android:layout_width="365dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        android:weightSum="1"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="2dp">

        <Button
            android:id="@+id/botaoNistoCremos"
            android:layout_width="296dp"
            android:layout_height="80dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="34dp"
            android:layout_weight="0.13"
            android:background="@drawable/nc"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintTop_creator="1" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.04" />

        <Button
            android:id="@+id/botaoLivroNistoCremos"
            android:layout_width="296dp"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="14dp"
            android:layout_weight="0.13"
            android:background="@drawable/ss"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/botaoECA"
            tools:layout_constraintTop_creator="1" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.03" />

        <Button
            android:id="@+id/botaoECA"
            android:layout_width="296dp"
            android:layout_height="80dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="16dp"
            android:layout_weight="0.12"
            android:background="@drawable/e"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/botaoNistoCremos"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintTop_creator="1"
            tools:layout_editor_absoluteX="31dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
